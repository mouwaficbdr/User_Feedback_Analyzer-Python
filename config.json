{
  "sentiment_thresholds": {
    "positive": 0.1,
    "negative": -0.1,
    "comment": "Seuils ajustés pour une meilleure sensibilité avec le nouveau lexique"
  },
  "output": {
    "summary_format": "json",
    "results_format": "csv",
    "summary_filename": "summary",
    "results_filename": "results"
  },
  "logging": {
    "level": "INFO",
    "file": "sentiment_analysis.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "processing": {
    "batch_size": 100,
    "encoding_fallbacks": [
      "utf-8",
      "latin-1",
      "cp1252"
    ]
  }
}
